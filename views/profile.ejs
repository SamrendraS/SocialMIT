<%- include('partials/header') %>

  <div class="container py-md-5 container--narrow">

    <%- include('partials/flash') %>

      <%- include('partials/profileShared') %>

        <div class="list-group">
          <% posts.forEach(function(post){ %>
            <a href="/post/<%= post._id  %>" class="list-group-item list-group-item-action" style="background-color: #1f2833; color: #f0eeee;" >
              <img class="avatar-tiny" src="<%= post.author.avatar %>">
              <strong>
                <%= post.title %>
              </strong> on <%= post.createdDate.getDate()%>/<%= post.createdDate.getMonth() +1 %>/<%=
                    post.createdDate.getFullYear() %>
            </a>
            <% }) %>
        </div>
  </div>

  <%- include('partials/footer') %>