<%- include('partials/header') %>

  <div class="container py-md-5 container--narrow">

    <%- include('partials/flash') %>

      <%- include('partials/profileShared') %>

        <div class="list-group">
          <% following.forEach(function(followedUser){ %>
            <a href="/profile/<%= followedUser.username %>" class="list-group-item list-group-item-action" style="background-color: #1f2833; color: #f0eeee;">
              <img class="avatar-tiny" src="<%= followedUser.avatar %>">
              <%= followedUser.username %>
            </a>
            <% }) %>
        </div>
  </div>

  <%- include('partials/footer') %>